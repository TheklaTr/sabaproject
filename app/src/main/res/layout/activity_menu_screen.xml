<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MenuScreen">

    <Button
        android:id="@+id/trainingBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToTrainingPrograms"
        android:text="@string/trnprograms"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/faqBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToFAQ"
        android:text="@string/faq"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingBtn" />

    <Button
        android:id="@+id/activeBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToHowToBeActive"
        android:text="@string/howactive"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faqBtn" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:onClick="ShowConfirmation"
        android:text="@string/logout"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/activeBtn"
        app:layout_constraintStart_toStartOf="@+id/activeBtn"
        app:layout_constraintTop_toBottomOf="@+id/activeBtn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="800dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="8dp"
        android:text="For debugging purposes"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="800dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/debugID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="950dp"
        android:layout_marginLeft="950dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="800dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/debugUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="950dp"
        android:layout_marginLeft="950dp"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debugID" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="800dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="8dp"
        android:text="Avatar"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/debugAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="950dp"
        android:layout_marginLeft="950dp"
        android:layout_marginTop="8dp"
        android:text="Avatar"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debugUser" />

</android.support.constraint.ConstraintLayout>