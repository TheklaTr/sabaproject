<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MenuScreen">

    <Button
        android:id="@+id/trainingBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToTrainingPrograms"
        android:text="@string/trnprograms"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/faqBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToFAQ"
        android:text="@string/faq"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingBtn" />

    <Button
        android:id="@+id/activeBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonshape"
        android:onClick="ToHowToBeActive"
        android:text="@string/howactive"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faqBtn" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:onClick="ShowConfirmation"
        android:text="@string/logout"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/activeBtn"
        app:layout_constraintStart_toStartOf="@+id/activeBtn"
        app:layout_constraintTop_toBottomOf="@+id/activeBtn" />

</android.support.constraint.ConstraintLayout>