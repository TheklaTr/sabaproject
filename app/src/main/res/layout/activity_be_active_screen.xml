<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeActiveScreen">

    <Button
        android:id="@+id/backButton"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonshape"
        android:drawableTop="@drawable/paperplane"
        android:drawablePadding="-5dp"
        android:onClick="BackButton"
        android:paddingTop="10sp"
        android:text="@string/returntomenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="1055dp"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:text="How can you help your family be more physically active and get enough exercise to stay healthy? Get up and move more as part of your everyday routine with our easy tips."
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1269dp"
        android:layout_height="0dp"
        android:text="How To Be Active"
        android:textAlignment="viewStart"
        android:textSize="90sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="7dp" />

    <LinearLayout
        android:layout_width="1268dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/howtobe1"
                android:layout_width="949dp"
                android:layout_height="wrap_content"
                android:text="How To Be Active #1"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="280dp" />

            <ImageButton
                android:id="@+id/howtobebu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="Howto1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/howtobe2"
                android:layout_width="949dp"
                android:layout_height="wrap_content"
                android:text="How To Be Active #2"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="361dp" />

            <ImageButton
                android:id="@+id/howtobebu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="Howto2"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/howtobe3"
                android:layout_width="949dp"
                android:layout_height="wrap_content"
                android:text="How To Be Active #3"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="442dp" />

            <ImageButton
                android:id="@+id/howtobebu3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="Howto3"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/howtobe4"
                android:layout_width="949dp"
                android:layout_height="wrap_content"
                android:text="How To Be Active #4"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="523dp" />

            <ImageButton
                android:id="@+id/howtobebu4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="Howto4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/howtobe5"
                android:layout_width="949dp"
                android:layout_height="wrap_content"
                android:text="How To Be Active #5"
                android:textSize="60sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="604dp" />

            <ImageButton
                android:id="@+id/howtobebu5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="Howto5"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/speaker" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>